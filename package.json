    "dompurify": "^2.2.6",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "fs-extra": "^9.1.0",
    "helmet": "^4.4.1",
    "jquery": "^3.5.1",
    "jsdom": "^16.4.0",
    "lodash": "^4.17.20",
    "method-override": "^3.0.0",
